<body>

  <div class="perfil">
    <h2>Perfil do Usuário</h2>
    
    <div class="info">
      <label for="nome">Nome:</label>
      <div id="nomeValor" class="valor">João Silva</div>
    </div>

    <div class="info">
      <label for="idade">Idade:</label>
      <div id="idadeValor" class="valor">30</div>
    </div>

    <div class="info">
      <label for="descricao">Descrição:</label>
      <div id="descricaoValor" class="valor">
        Desenvolvedor web apaixonado por tecnologia e design.
      </div>
    </div>

    <button id="btnEditar">Editar Perfil</button>
  </div>

  <script>
    const btnEditar = document.getElementById('btnEditar');
    const nomeValor = document.getElementById('nomeValor');
    const idadeValor = document.getElementById('idadeValor');
    const descricaoValor = document.getElementById('descricaoValor');

    let inputNome, inputIdade, textareaDescricao;

    btnEditar.addEventListener('click', () => {
      if (btnEditar.textContent === 'Editar Perfil') {
        // Modo edição
        inputNome = document.createElement('input');
        inputNome.type = 'text';
        inputNome.value = nomeValor.textContent;
        inputNome.id = 'inputNome';

        inputIdade = document.createElement('input');
        inputIdade.type = 'number';
        inputIdade.value = idadeValor.textContent;
        inputIdade.id = 'inputIdade';
        inputIdade.min = 0;

        textareaDescricao = document.createElement('textarea');
        textareaDescricao.id = 'textareaDescricao';
        textareaDescricao.value = descricaoValor.textContent;

        nomeValor.replaceWith(inputNome);
        idadeValor.replaceWith(inputIdade);
        descricaoValor.replaceWith(textareaDescricao);

        btnEditar.textContent = 'Salvar Perfil';

        // Focar no campo nome para melhor UX
        inputNome.focus();

      } else {
        // Salvar dados e voltar para modo visualização
        nomeValor.textContent = inputNome.value.trim() || 'Nome não informado';
        idadeValor.textContent = inputIdade.value || '0';
        descricaoValor.textContent = textareaDescricao.value.trim() || 'Sem descrição';

        inputNome.replaceWith(nomeValor);
        inputIdade.replaceWith(idadeValor);
        textareaDescricao.replaceWith(descricaoValor);

        btnEditar.textContent = 'Editar Perfil';
      }
    });
  </script>

</body>
