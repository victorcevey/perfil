      height: 100vh;
      margin: 0;
      padding: 20px;
    }
    .perfil {
      background: #ffffffcc;
      backdrop-filter: saturate(180%) blur(20px);
      padding: 35px 40px;
      border-radius: 18px;
      box-shadow: 0 15px 35px rgba(0,0,0,0.1);
      width: 400px;
      max-width: 100%;
      transition: box-shadow 0.3s ease;
    }
    .perfil:hover {
      box-shadow: 0 20px 50px rgba(0,0,0,0.15);
    }
    h2 {
      margin-bottom: 25px;
      color: #1e293b;
      font-weight: 600;
      font-size: 2rem;
      text-align: center;
      letter-spacing: 1.2px;
    }
    .info {
      margin-bottom: 20px;
    }
    label {
      font-weight: 600;
      display: block;
      margin-bottom: 8px;
      color: #475569;
      letter-spacing: 0.05em;
      text-transform: uppercase;
      font-size: 0.85rem;
    }
    .valor {
      background: #f9fafb;
      padding: 12px 15px;
      border-radius: 12px;
      min-height: 34px;
      color: #334155;
      font-size: 1.1rem;
      box-shadow: inset 0 1px 3px rgba(0,0,0,0.05);
      user-select: none;
      transition: background-color 0.3s ease;
    }
    input[type="text"], input[type="number"], textarea {
      width: 100%;
